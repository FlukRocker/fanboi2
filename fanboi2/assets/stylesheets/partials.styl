@import "nib"
@import "shared"


div.leader
  background-color site-dark
  padding 0

  h2
    color #ddd
    font-weight normal
    font-family "Montserrat", sans-serif
    line-height 100%
    margin 25px 0

  div.wrapper
    background-color site-dark-lighter
    border-top 1px solid #192428

    div.navbar
      margin-bottom 0

      div.navbar-inner
        background-color inherit
        background-image none
        border none
        border-radius 0
        box-shadow none
        padding 0

      ul.nav
        > li
          > a
            color #aaa
            text-shadow none

            &:hover
              color #fff

        > li.active
          > a
          > a:hover
            background-color #505a60
            color #fff

@media (max-width: 767px)
  div.leader
    margin 0 -20px
    padding 0 20px

    div.wrapper
      margin 0 -20px
      padding 0 20px


.btn
  background-image none
  border 1px solid #b5b5b5
  border-radius 0
  box-shadow none
  text-shadow none

  &.btn-success
    background-color #5dbc1f
    background-image none
    border-color #479017

    &:hover
      background-color #57b01d
