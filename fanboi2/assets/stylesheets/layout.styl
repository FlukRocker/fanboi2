@import "nib"

footer#footer
  border-top 1px solid #e5e5e5
  color #777

  p
    font-size 14px
    line-height 160%
    margin 0


@media (min-width: 980px)
  body
    background-color #f5f5f5
    padding-top 40px

  section#main
    background-color #fff
    padding 20px 0

  footer#footer
    padding 20px 0


@media (max-width: 979px)
  footer
    margin-top 20px
    padding 10px 0


div.block
  background-image linear-gradient(top, #fff, #e6e6e6)
  border 1px solid
  border-color rgba(0, 0, 0, 0.15) rgba(0, 0, 0, 0.15) rgba(0, 0, 0, 0.25)
  border-radius 5px
  color #777
  padding 10px 20px
  margin 0 0 15px

  &:last-child
    margin-bottom 0

  h3
    font-size 18px
    line-height 18px
