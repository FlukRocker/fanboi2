{% extends "layout.jinja2" %}
{% from "partials/helper.jinja2" import time_tag %}

{% block leader %}
    <header class="topic">
        <div class="container">
            <h2>{{ topic.title }}</h2>
            <p>
                <span class="posted">Last posted {{ time_tag(topic.posted_at) }}</span>
                <span class="posts"><strong>{{ topic.post_count }} posts</strong></span>
            </p>
            <ul>
                <li><a href="{{ request.route_path("board", board=board.slug) }}"><i class="icon-left"></i> Back</a></li>
                <li{% if request.route_name in ("topic", "topic_scoped") %} class="active"{% endif %}><a href="{{ request.route_path("topic", board=board.slug, topic=topic.id) }}"><i class="icon-th-list"></i> Show topic</a></li>
                <li><a href="#reply"><i class="icon-share-alt"></i> Reply</a></li>
            </ul>
        </div>
    </header>
{% endblock %}
