{% extends "layout.jinja2" %}

{% block leader %}
<div id="boards-layout">
  <h2>{{ board.obj.title }}</h2>
  <ul>
    <li{% if request.view_name == "" %} class="active"{% endif %}><a href="{{ request.resource_path(board) }}">Overview</a></li>
    <li{% if request.view_name == "all" %} class="active"{% endif %}><a href="{{ request.resource_path(board, "all") }}">All topics</a></li>
    <li{% if request.view_name == "new" %} class="active"{% endif %}><a href="{{ request.resource_path(board, "new") }}">New topic</a></li>
  </ul>
</div>
{% endblock %}
