{% extends "layout.jinja2" %}

{% block leader %}
  <div class="leader board-info">
    <div class="container">
      <h2>{{ board.obj.title }}</h2>
    </div>
    <div class="wrapper">
      <div class="container">
        <div class="navbar">
          <div class="navbar-inner">
            <ul class="nav">
              <li{% if request.view_name == "" %} class="active"{% endif %}><a href="{{ request.resource_url(board) }}"><i class="icon-list icon-white"></i> <span class="hidden-phone">All topics</span></a></li>
              <li{% if request.view_name == "new" %} class="active"{% endif %}><a href="{{ request.resource_url(board, "new") }}"><i class="icon-plus icon-white"></i> <span class="hidden-phone">New topic</span></a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
