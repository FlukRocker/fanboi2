{% extends "layout.jinja2" %}
{% block content %}
<div class="boards">
    <div class="help">
        <div class="container">
            Please select category from list below.
        </div>
    </div>
    {% for board in boards %}
    <div id="board-{{ board.slug }}" class="board">
        <div class="container">
            <h3><a href="{{ request.route_path('board', board=board.slug) }}">{{ board.title }}</a></h3>
            {% if board.description %}<div class="description">{{ board.description|markdown }}</div>{% endif %}
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}
