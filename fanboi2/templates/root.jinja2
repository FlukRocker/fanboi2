{% extends "layout.jinja2" %}
{% block content %}
<div class="boards">
    <div class="help">
        <div class="container">
            Please select category from list below.
        </div>
    </div>
    {% for board in boards %}
    <div id="board-{{ board.obj.slug }}" class="board">
        <div class="container">
            <h3><a href="{{ request.resource_path(board) }}">{{ board.obj.title }}</a></h3>
            {% if board.obj.description %}<div class="description">{{ board.obj.description|markdown }}</div>{% endif %}
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}
