{% from "partials/helper.jinja2" import time_tag %}

{% macro post_block(post) %}
<div id="post-{{ post.obj.id }}">
  <dl id="p{{ post.obj.number }}">
    <dt>
      <span>{{ post.obj.number }}</span>
      <span>{{ post.obj.name }}</span>
      <span>Posted {{ time_tag(post.obj.created_at) }}</span>
      {% if post.obj.ident %}<span>ID:{{ post.obj.ident }}</span>{% endif %}
    </dt>
    <dd>{{ post|formatpost }}</dd>
  </dl>
</div>
{% endmacro %}
