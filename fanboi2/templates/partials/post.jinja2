{% from "partials/helper.jinja2" import time_tag %}

{% macro post_block(post) %}
<div id="post-{{ post.obj.id }}" class="post">
  <div class="container">
    <dl id="p{{ post.obj.number }}">
      <dt>
        <span class="number"><a class="label">{{ post.obj.number }}</a></span>
        <span class="created">Posted {{ time_tag(post.obj.created_at) }}</span>
      </dt>
      <dd>{{ post|formatpost }}</dd>
    </dl>
  </div>
</div>
{% endmacro %}
