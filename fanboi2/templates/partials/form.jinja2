{% macro form_field(field) %}
    <div class="field-{{ field.id }}{% if field.errors %} errors{% endif %}{% if field.type == "BooleanField" %} inline{% endif %}">
        {% if field.type == "BooleanField" %}
            {{ field }} <label for="{{ field.id }}">{{ field.label.text }}</label>
        {% else %}
            <label for="{{ field.id }}">
                {{ field.label.text }}
                {% if field.flags.required %}<abbr title="Required">*</abbr>{% endif %}
            </label>
            <div>
                {{ field }}
                {% if field.errors %}<span class="error">{{ field.errors[0] }}</span>{% endif %}
            </div>
        {% endif %}
    </div>
{% endmacro %}

{% macro form_submit(label) %}
    <div>
        <button type="submit" class="button">{{ label }}</button>
    </div>
{% endmacro %}
