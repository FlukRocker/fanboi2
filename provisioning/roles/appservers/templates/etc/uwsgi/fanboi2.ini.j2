[uwsgi]
virtualenv = {{ app.virtualenv }}
wsgi-file = {{ app.base }}/fanboi2.wsgi
uid = www-data
gid = www-data
socket = {{ ansible_default_ipv4.address }}:{{ uwsgi.port }}
max-requests = 1000
{% if development %}
python-autoreload = 3
{% else %}
cheaper = {{ uwsgi.min_workers }}
workers = {{ uwsgi.max_workers }}
cheaper-initial = {{ uwsgi.min_workers }}
cheaper-algo = busyness
cheaper-step = 1
{% endif %}
